---
title: Deep Dives
published: true
sections_content:
---
<div id="deep-dives" class="section">
  <h2 class="title is-2">{{ section.settings.title }}</h2>
  
  {% editable_model articles, hint: 'Articles' %}
    <div class="columns is-multiline">
      {% with_scope category: 'deep-dives' %}
        {% for article in contents.articles %}
          <div class="column is-quarter">
            <a href="{% path_to article %}">
              <div class="card">
                <div class="card-content">
                  <div class="media">
                    <div class="media-content">
                      <p class="title is-4">{{ article.title }}</p> published at {{ article.published_at | localized_date: '%m/%d/%Y' }}
                    </div>
                  </div>
                  <div class="content">
                    {{ article.description }}
                  </div>
                </div>
              </div>
            </a>
          </div>
        {% endfor %}
      {% endwith_scope %}
    </div>
  {% endeditable_model %}
</div>
