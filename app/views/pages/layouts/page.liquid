{% extends layouts/default %}

{% block main %}

<!-- Page header -->
{% block header, short_name: true, priority: 1 %}
<header class='intro-header' style="background-image: url({% editable_file background, priority: 2 %}/samples/home-bg.jpg{% endeditable_file %})">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="site-heading">
          <h1> {{ page.title }} </h1>
          <hr class="small"/>

          <span class="subheading">
            {% editable_text subheading, rows: 2, priority: 1 %}Lorem ipsum{% endeditable_text %}
          </span>
        </div>
      </div>
    </div>
  </div>
</header>
{% endblock %}

<!-- Main content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
