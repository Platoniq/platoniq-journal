- # Footer
%footer.footer
  %div.content.has-text-centered
    Made with love by Platoniq
    %p.copyright.text-muted
      Copyright &copy; {{ site.title }} {{ now | format_date: '%Y' }}
  %ul.list-inline.text-center
    {% for metafield in site.metafields.social %}
    {% if metafield.value %}
    %li
      %a{ href: '{{ metafield.value }}' }
        %span.fa-stack.fa-lg
          %i.fa.fa-circle.fa-stack-2x
          %i.fa.fa-stack-1x.fa-inverse{ class: "fa-{{ metafield.name }}" }
    {% endif %}
    {% endfor %}
