%head
  %meta{ charset: 'utf-8' }
  %meta{ :'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }
  %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1' }
  %meta{ name: 'description', content: '{{ site.seo_description }}' }

  {% seo %}

  %link{ rel: 'canonical', href: '{{ host }}{% path_to page %}' }

  {% include google %}

  {{ 'bundle.css' | stylesheet_tag }}
  {{ 'bundle.js' | javascript_tag }}

  {% if wagon %}
  %script{ src: "http://localhost:35729/livereload.js" }
  {% endif %}

  - # Custom fonts
  %link{ href: '//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', rel: 'stylesheet', type: 'txt/css' }
  %link{ href: '//fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel: 'stylesheet', type: 'txt/css' }
  %link{ href: '//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel: 'stylesheet', type: 'txt/css' }

